<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alex.jniexample.MainActivity" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Native Maths" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/title"
        android:layout_margin="5dp"
        android:background="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/tv_factorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:text="Factorial calculator" />

    <EditText
        android:id="@+id/factorial_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_factorial" />

    <RadioGroup
        android:id="@+id/rdgGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/factorial_input"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" 
        android:checkedButton="@+id/rdbIJF">

        <RadioButton
            android:id="@+id/rdbIJF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J+I"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rdbRJF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="J+R"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rdbRNF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="N+R"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rdbINF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="N+I"
            android:textSize="12sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/factorial_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rdgGrupo"
        android:hint="Factorial result" />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/factorial_result"
        android:layout_margin="5dp"
        android:background="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/tv_fibonacci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator2"
        android:text="Fibonacci calculator" />

    <EditText
        android:id="@+id/fibonacci_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fibonacci" />

    <RadioGroup
        android:id="@+id/rdgGroupFib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fibonacci_input"
        android:layout_centerHorizontal="true"
        android:checkedButton="@+id/rdbIJFib"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rdbIJFib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J+I"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rdbRJFib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="J+R"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rdbRNFib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="N+R"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rdbINFib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="N+I"
            android:textSize="12sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/fibonacci_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rdgGroupFib"
        android:hint="Fibonacci result" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/bt_launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch!" 
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fibonacci_result"/>
	
</RelativeLayout>